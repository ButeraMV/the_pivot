<div class="category-show-title-div">
  <h3 class="category-show-title center-text">MANAGE STORES</h3>
</div>
<hr>
<table class="table">
  <% @stores.each do |store| %>
    <tr class="store">
      <td>
        <%= store.name %>
      </td>
      <td>
        <%= store.status %>
      </td>
      <td>
        <% if store.status == 'Pending' %>
          <%= link_to "Approve", admin_store_path(store, approve: true), class: "btn btn-primary", method: :patch %>
          <%= link_to "Decline", admin_store_path(store, decline: true), class: "btn btn-danger", method: :patch %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>